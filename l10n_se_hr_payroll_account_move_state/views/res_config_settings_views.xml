<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="res_config_settings_view_form_payroll_slip_state_is_draft" model="ir.ui.view">
    <field name="name">hr_payroll_community.res.config.settings.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="hr_payroll_community.res_config_settings_view_form_payroll"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='hr_payroll_accountant'][1]" position="after">
        <div class="row mt16 o_settings_container" id="hr_payroll_accountant">
            <div id="use_collaborative_pad" class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                  <field name="slip_state_is_draft"/>
              </div>
              <div class="o_setting_right_pane" name="pad_project_right_pane">
                <label for="slip_state_is_draft"/>
                <div class="text-muted">
                  Keep confirmed account slips in status: draft
                </div>
              </div>
            </div>
          </div>
        </xpath>
    </field>
</record>
</odoo>
